<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image Source="ricky.png"
                    Aspect="Center"/>
            <Frame BorderColor="Gray"
                   CornerRadius="20"
                   Padding="10"
                   BackgroundColor="Black"
                   WidthRequest="140"
                   HeightRequest="50">
                <Label Text="Ricky HQ"
                        TextColor="Green"
                       BackgroundColor="Black"
                       FontSize="Large"
                        HorizontalOptions="Center"/>
            </Frame>
            <Frame BorderColor="#FF1900FF"
                   CornerRadius="20"
                   Padding="10"
                   WidthRequest="400"
                   HeightRequest="200"
                   BackgroundColor="black">
                <Entry Placeholder="Enter your name"
                        Grid.Row="1"
                        TextColor="White"
                        BackgroundColor="Blue"/>

            </Frame>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
